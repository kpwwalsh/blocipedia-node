<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>
      <% include ../static/partials/messages.ejs %>

      <h1>Wikis</h1>
        
        <a href="/wikis/new" class="btn btn-success">New Wiki</a>

      <ul class="list-group">
        <% wikis.forEach((wiki) => { %>
            if(wiki.private && currentUser && (currentUser.isPremium() 
            || currentUser.isAdmin() || currentUser.userId = wiki.userId)){%>
                <li class="list-group">
                    <a href="/wikis/<%=wiki.id %>"> <%=wiki.title %> </a>
                </li>
           <% })%>
        <% } %>
        <%}else{%>
            <li class="list-group">
                <a href= "/wikis/<%=wiki.id%>">
                    <%=wiki.title%></a>
            </li>
            <% }%>
            <% })%>
      </ul>
    </main>
  </body>
</html>